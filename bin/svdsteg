#!/bin/bash
# stegotool

set -e

usage() {
  echo "Usage: $0 (encrypt|decrypt|style)"
  echo "If encrypt $1 (message-file.txt) $2 (your-image.png)"
  echo "If decrypt $1 (your-image.png)"
}

stylecheck() {
	set -x
	pycodestyle svd_steg
	pydocstyle svd_steg
	pylint --reports=n --disable=cyclic-import svd_steg
}

case $1 in
	"embed")
		if [ $# -ne 3 ]; then
			usage
			exit 1
		fi
		echo "Embedding Message"
		svd_steg -e $2 $3
		;;
	"decrypt")
		if [ $# -ne 2 ]; then
			usage
			exit 1
		fi
		echo "Decrypting Message"
		svd_steg -d $2
		;;
	"style")
		stylecheck
		;;
	*)
		usage
		;;
esac